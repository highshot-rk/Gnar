{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom",
      "dom.iterable"
    ],
    "declaration": true,
    "incremental": true,
    "composite": true,
    "noImplicitThis": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "alwaysStrict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "**/*.json", "**/*.ts", "**/*.js", "**/*.*"
  ]
}
